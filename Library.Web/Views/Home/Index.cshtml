@model IEnumerable<Nest.IHit<Library.Web.Models.Book>>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Getting started with Elasticseach</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-large">Learn more &raquo;</a></p>
</div>



<div class="row" style="margin-top:50px;">
    <div class="col-md-12">
        @using (Html.BeginForm("Search", "Home", FormMethod.Get))
{
    <input class="input-lg" type="search" placeholder="Search" name="query" />
}
        
    </div>
</div>
@if (Model != null)
{
        <table class="table table-condensed">
            <thead>
                <tr><th>Score</th><th>Title</th><th>Author</th></tr>
            </thead>

            <tbody>
                @foreach (var result in Model)
                {
                    <tr>
                        <td>@result.Score</td>
                        <td>@result.Source.Title</td>
                        <td>@result.Source.Author</td>
                    </tr>

                }
            </tbody>

        </table>

}