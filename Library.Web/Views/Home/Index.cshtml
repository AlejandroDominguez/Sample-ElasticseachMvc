@model IEnumerable<Nest.IHit<Library.Web.Models.Book>>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Getting started with Elasticseach</h1>
    <p class="lead">Go to Books and insert books to search after.</p>
    <p><a href="/Books/Create" class="btn btn-primary btn-large">Go &raquo;</a></p>
</div>



@if (Model != null)
{
    <table class="table table-condensed">
        <thead>
            <tr><th>Score</th><th>Title</th><th>Author</th></tr>
        </thead>

        <tbody>
            @foreach (var result in Model)
            {
                <tr>
                    <td>@result.Score</td>
                    <td>@result.Source.Title</td>
                    <td>@result.Source.Author</td>
                </tr>

            }
            @if (!Model.Any())
            {
                 <tr>
                     <td></td>
                     <td>Not results found :(</td>
                </tr>
            }
        </tbody>

    </table>
   <h4>Results <span class="label label-default">@Model.Count()</span></h4>
}